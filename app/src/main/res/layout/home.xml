<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Frame Layout donde estarán los botones -->
    <FrameLayout
        android:id="@+id/framely_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|top"
            android:layout_margin="16dp"
            android:background="@drawable/round_button"
            android:contentDescription="Botón de perfil"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_24" />


        <androidx.cardview.widget.CardView
            android:id="@+id/fab_coins"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#BDB4B4"
            android:contentDescription="Botón monedas"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/baseline_monetization_on_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Coins"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Contenedor horizontal para los CardView -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- CardView 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_filter_fav"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#0C5D7D"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/add_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:text="Add filter"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#0C5D7D"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/lol" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:text="Lol"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#0C5D7D"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/valorant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:text="Valorant"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="#0C5D7D"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/cs2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:text="CSGO"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/svApuestas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="#D6E3F6"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="start"
                                android:layout_margin="8dp"
                                android:src="@drawable/mad" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/black"
                                android:text="Mad Lions"
                                android:textAlignment="center" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="#0C5D7D"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1.8"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="start"
                                android:layout_margin="8dp"
                                android:src="@drawable/fnatic" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Fnatic"
                                android:textAlignment="center" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="#0C5D7D"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1.2"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Liga LEC" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Fecha partido y hora" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"
                                android:layout_weight="0.1"
                                android:text="Resultado" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="#D6E3F6"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="start"
                                android:layout_margin="8dp"
                                android:src="@drawable/mad" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Mad Lions"
                                android:textAlignment="center" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="#0C5D7D"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1.8"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="start"
                                android:layout_margin="8dp"
                                android:src="@drawable/fnatic" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Fnatic"
                                android:textAlignment="center" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="#0C5D7D"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1.2"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Liga LEC" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Fecha partido y hora" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="0.1"
                                android:text="Resultado" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="#D6E3F6"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="start"
                                android:layout_margin="8dp"
                                android:src="@drawable/mad" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Mad Lions"
                                android:textAlignment="center" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="#0C5D7D"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1.8"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="start"
                                android:layout_margin="8dp"
                                android:src="@drawable/fnatic" />

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Fnatic"
                                android:textAlignment="center" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="35dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="8dp"
                                android:layout_marginBottom="8dp"
                                android:backgroundTint="#0C5D7D"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="1.2"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Liga LEC" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:text="Fecha partido y hora" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"
                                android:layout_weight="0.1"
                                android:text="Resultado" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Bottom Navigation Custom -->
            <LinearLayout
                android:id="@+id/bottomNavBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center">

                <!-- Elemento 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconRedeem"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/redeem"
                        app:tint="@color/black"/>

                </LinearLayout>

                <!-- Elemento 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconHome"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home"
                        app:tint="@color/black"/>

                </LinearLayout>

                <!-- Elemento 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconGames"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/game"
                        app:tint="@color/black"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>



